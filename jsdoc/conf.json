{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./lib", "./README.md"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "templates": {
    "applicationName": "devnup/cli - docs",
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles" : true
    },
    "linenums": true
  },
  "plugins": ["plugins/markdown" ],
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "./jsdoc/template",
    "tutorials": "./jsdoc/tutorials"
  }
}